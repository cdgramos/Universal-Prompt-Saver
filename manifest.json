{
  "manifest_version": 3,
  "name": "Universal Prompt Saver",
  "version": "1.12",
  "description": "Save prompts and insert them anywhere with a right-click.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "toggle-picker": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Open Quick Prompt Picker"
    }
  }
}
